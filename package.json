	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/musama619/react-files-preview.git"
	},
	"module": "./dist/react-files-preview.es.js",
	"types": "./dist/index.d.ts",
	"exports": {
